generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique // Ensure usernames are unique
  email     String   @unique // Email should be unique for users
  password  String
  infoId    String?  @unique @db.ObjectId // Make infoId unique to maintain one-to-one relationship
  info      Info?    @relation(fields: [infoId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  createdAt DateTime @default(now())
}

model Info {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String? // Change to optional if name can be null
  instituteId String?
  hostel      String?
  room        Int?
  hobbies     String?
  user        User?   @relation
  userId      String? @db.ObjectId
}
