generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  info      Info?    @relation(fields: [infoId], references: [id])
  infoId    String?  @unique @db.ObjectId
}

model Info {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  room          String?
  name          String?
  hostel        String? // Added this field to store the hostel name
  instituteId   String?
  hobbies       String?
  whatsapp      String?
  instagram     String?
  linkedin      String?
  github        String? // Added this field to store GitHub link
  bio           String? // Added this field to store user bio
  contactNumber String? // Added this field to store contact number

  userId String? @db.ObjectId // To establish a relation with User
  User   User?
}
