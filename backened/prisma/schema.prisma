generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  info      Info?    @relation(fields: [infoId], references: [id])
  infoId    String?  @unique @db.ObjectId
}

model Info {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  room        Int?
  name        String?
  instituteId String?
  hobbies     String?
  whatsapp    String?
  instagram   String?
  linkedin    String?
  User        User?
}
